<div id="recommendations-container" class="well">
  <% @recommendations[:recommendations].each do |r| %>
	  <div data-item-id="<%= r['result_id'] %>" class="recommendation-item" rel="popover" title="<%= r['title'] %>" data-content="<%= r['description'] %>">
      <div class="recommendation-item-img-div">
        <div class="actions dn">
          <a href="#" class="btn btn-success">
            <i class="icon-ok"></i>
          </a>
          <a href="#" class="btn btn-danger">
            <i class="icon-remove"></i>
          </a>
        </div>
        <%= link_to image_tag(r['image_url'], :class => "recommendation-item-img"), "#" %>
      </div>
    </div>
  <% end %>
</div>